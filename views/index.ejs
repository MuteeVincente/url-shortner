<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>URL Shortener</title>
</head>
<body>
   
    <div class="container">
        <h1>URL Shrinker</h1>

        <form action="/shortUrls" method="post" class="my-4">
            <div class="row">
                <label for="fullUrl" class="sr-only"></label>
                <div class="col-md-8">
                    <input required type="url" name="fullUrl" id="fullUrl" placeholder="Enter URL" class="form-control">
                </div>
                <div class="col-md-4">
                    <button class="btn btn-success btn-block" type="submit">Shrink</button>
                </div>
            </div>
        </form>

        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th class="sr-only">Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                      <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                      <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                      <td><%= shortUrl.clicks %></td>
                    </tr>
                  <% }) %>
            </tbody>
        </table>
    </div>
    
</body>
</html>
